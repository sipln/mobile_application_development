<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#77e3d1"
    android:padding="20dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:text="Chữ sô theo định dạng của Việt Nam"
        android:textColor="#268808"
        android:textStyle="italic"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/monetary"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="USD"
            android:textSize="24dp"
            android:textColor="#c00e3e"
            />
        <EditText
            android:id="@+id/et_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d1dfec"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:hint="Số tiền"

            android:textSize="24dp"
             />
        <Button
            android:id="@+id/btn_Converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/button_shape"
            android:text="Chuyển đổi"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Exchange"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/exchange"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="#c00e3e"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_KQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"

            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="24dp" />
    </LinearLayout>
</LinearLayout>